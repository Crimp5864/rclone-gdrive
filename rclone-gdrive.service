[Unit]
Description=Watch local Google Drive folder for changes and trigger rclone bisync
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=3min
StartLimitBurst=3

[Service]
Type=exec
ExecStart=%h/.local/bin/rclone-watch
Restart=on-failure
RestartSec=1min

[Install]
WantedBy=default.target
